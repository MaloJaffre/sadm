# Maintainer: Victor Collod <victor.collod@prologin.org>
pkgname=vscode-rust
# TODO: proper versionning
pkgver=1
pkgrel=1
pkgdesc="Rust language support for vscode"
depends=(vscode-global-plugins)
makedepends=(code)
options=()
noextract=()
md5sums=()
validpgpkeys=()
arch=("x86_64")

package() {
        extensions="$pkgdir/usr/share/vscode-extensions/"
        mkdir -p -- "$extensions"
        code --extensions-dir "$extensions" --install-extension rust-lang.rust
}
