server {
    listen 80;
    server_name paste;

    access_log logs/paste.access.log main;

    location ~ ^(.*)/(.*).css {
        root /var/prologin/webservices/paste/;
    }

    location ~ ^(.*)/(.*).png {
        root /var/prologin/webservices/paste/;
    }

    location / {
        rewrite ^/$ / break;
        rewrite ^/user/([^/]+)$ /?user=$1 break;
        rewrite ^/user/([^/]+)/([^&]+)?&(.*)$ /?id=$1/$2&$3 break;
        rewrite ^/([^&]+)&(.*)$ /?id=$1&$2 break;
        rewrite ^/(.*)$ /?id=$1 break;

        proxy_pass http://localhost:20050;
        include proxy_params;
    }
}
